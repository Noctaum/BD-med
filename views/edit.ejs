
<% include ./partials/header %>

<div class="container">
  <form action="/patients/<%= blog._id %>?_method=PUT" method="POST">
     <h1>Edit <%= blog.firstName %></h1>
    <div class="form-group">
      <label for="exampleInputEmail1">Имя</label>
      <input type="text" class="form-control" name="blog[firstName]" value="<%= blog.firstName %>">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Фамилия</label>
      <input type="text" class="form-control" name="blog[secondName]" value="<%= blog.secondName %>">
    </div>
     <div class="form-group">
      <label for="exampleInputPassword1">Что-нибудь</label>
      <input type="text" class="form-control" name="blog[image]" value="<%= blog.image %>">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<% include ./partials/footer %>